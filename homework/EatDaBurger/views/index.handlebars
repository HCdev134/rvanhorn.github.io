<div class = "container">
	<div class = "row">
		<div class = "col-xl-12">
			<h1>Eat-Da-Burger</h1>
			<hr>
		</div>

		<div class = "col-xl-6">

			<h3>Available Burgers</h3>
			{{#each burgers}}
				{{#unless this.devoured}}
					<pre>{{this.id}}. {{this.burger_name}}</pre>
					<form class="devour-burger">
						<input input type = "hidden" type = "text" class="burger_id" value ={{this.id}}>
						<button type = "submit" class = "btn btn-default">Devour Time!</button>
					</form>
					<br><br>
				{{/unless}}
			{{/each}}

		</div>
		<div class = "col-xl-6">

			<h3>Burgers Devoured!</h3>
			{{#each burgers}}
				{{#if this.devoured}}
					<pre>{{this.id}} . {{this.burger_name}}</pre>
				{{/if}}
			{{/each}}
		</div>
	</div>

	<form action = "/create" method = "POST">
		<input type = "text" class = "form-control" name = "burger_name" value = "" id = "enter_text"><br>
		<button type = "submit" class = "btn btn-primary" id = "text-enter-button">Submit</button>
	</form>

</div>
